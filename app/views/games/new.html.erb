
<% random_letters= @letters.sample(10) %>

<div class="letters-list">
<ul>
<% random_letters.each do |letter| %>
  <li><%=letter.capitalize%></li>
<% end %>
</ul>
</div>

<div class="form">
  <h3>What is the longest word you can find ?</h3>
  <form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="words" id="user-answer">
    <input type="submit" name="submit-btn" value="Play" id="">
  </form>
</div>
